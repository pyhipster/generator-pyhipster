from flask import Blueprint
import logging

bp = Blueprint('user-resource',__name__,url_prefix='/api/admin')

@bp.route("/users", methods=['POST'])
def create_users():
    logging.info('POST /api/admin/users')
    return 'POST /api/admin/users'

@bp.route("/users", methods=['PUT'])
def update_users():
    logging.info('PUT /api/admin/users')
    return 'PUT /api/admin/users'

@bp.route("/users", methods=['GET'])
def get_all_users():
    logging.info('GET ALL /api/admin/users')
    return 'GET all /api/admin/users'

@bp.route("/users/<string:login>", methods=['GET'])
def get_user_by_login(login):
    logging.info('GET /api/admin/users/<string:login>')
    return 'GET /api/admin/users/<string:login>'

@bp.route("/users/<string:login>", methods=['DELETE'])
def delete_user_by_login(login):
    logging.info('DELETE /api/admin/users/<string:login>')
    return 'DELETE /api/admin/users/<string:login>'
