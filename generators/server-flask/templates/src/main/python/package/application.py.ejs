from flask import Flask, Blueprint
from flask_restx import Api
<%_ if (authenticationTypeJwt) { _%>
from flask_jwt_extended import JWTManager
from jwt import ExpiredSignatureError
<%_ } else if (authenticationTypeSession) { _%>
from flask import session
from flask_login import LoginManager
from domain.User import User
<%_ } _%>
from rest import add_api_namespace
from config.BaseConfig import DevConfig, ProdConfig
from config.FakeDataLoader import load_fake_data
from DatabaseConfig import db
from WebSerializer import ma
from MailConfiguration import mail, executor
import argparse
<%_ if (!cacheProviderNo) { _%>
from CacheConfiguration import cache
<%_ } _%>


app = Flask(__name__, template_folder='../resources/templates/mail')
bluePrint = Blueprint('api', __name__, url_prefix='/api')
<%_ if (withAdminUi) { _%>
api = Api(bluePrint, doc='/v3/api-docs/default', title='<%= mainClass %> Application')
<%_ } else { _%>
api = Api(bluePrint, doc=False)
<%_ } _%>
api = add_api_namespace(api)
<%_ if (authenticationTypeJwt) { _%>
jwt = JWTManager(app)

@api.errorhandler(ExpiredSignatureError)
def handle_custom_exception(error):
# Returns an error message when the toke has expired
return {'message': 'Login has expired. Please login again'}, 401

<%_ } else if (authenticationTypeSession) { _%>
login_manager = LoginManager()

@login_manager.user_loader
def load_user(user_id):
    return User.get_by_id(int(user_id))
<%_ } _%>

parser = argparse.ArgumentParser()
parser.add_argument('--tls', default=False, help='Enable TLS')
parser.add_argument('--env', default='dev', choices=['dev', 'prod'], help='Environment (dev or prod)')
args = parser.parse_args()


@app.before_first_request
def create_tables():
    db.create_all()
    load_fake_data(app)


def create_app(flaskapp):
    flaskapp.register_blueprint(bluePrint)
    if args.env == 'dev':
        flaskapp.config.from_object(DevConfig)
    elif args.env == 'prod':
        flaskapp.config.from_object(ProdConfig)
    else:
        flaskapp.config.from_object(DevConfig)
    <%_ if (!cacheProviderNo) { _%>
    cache.init_app(app)
    <%_ } _%>
    db.init_app(flaskapp)
    ma.init_app(flaskapp)
    <%_ if (authenticationTypeSession) { _%>
    login_manager.init_app(app)
    <%_ } _%>
    mail.init_app(flaskapp)
    executor.init_app(flaskapp)
    return flaskapp


if __name__ == '__main__':
    flask_app = create_app(app)
    if args.tls and args.env == 'dev':
        flask_app.run(debug=True, port=8080, ssl_context='adhoc')
    elif not args.tls and args.env == 'dev':
        flask_app.run(debug=True, port=8080)
    elif args.tls and args.env == 'prod':
        flask_app.run(debug=False, port=8080, ssl_context='adhoc')
    elif not args.tls and args.env == 'prod':
        flask_app.run(debug=False, port=8080)
    else:
        flask_app.run(debug=True, port=8080)
